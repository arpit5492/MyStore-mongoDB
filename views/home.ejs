<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/home.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title><%= title %></title>
    </head>
<body>
    <%- include("./partials/navbar.ejs"), {isLoggedIn: isLoggedIn} %>
    <div>
        <div class="mt-3 card-container">
            <% if(products.length > 0) { %>
                <% products.forEach(prod => { %>
                    <div class="card m-3 custom-card shadow-lg">
                        <img class="card-img-top custom-img" src=<%= "/" + prod.image %>  alt=<%= prod.pName %>>
                        <div class="card-body">
                            <div class="custom-price">
                                <h3 class="card-title fs-5"><%= prod.pName %></h3>
                                <h4 class="card-title fs-5 fw-light">$<%= prod.price %></h4>
                            </div>
                            <% if(isLoggedIn === "true") { %>
                                <div class="">
                                    <a href=<%= "/editProd/" + prod.id %> class="btn btn-outline-primary mx-1 mt-4 edit-buttons">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href=<%= "/delProd/" + prod.id %> class="btn btn-outline-primary mx-1 mt-4 edit-buttons">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <%- include("./partials/noProd.ejs") %>
            <% } %>
        </div>
    </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>